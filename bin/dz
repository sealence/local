#!/bin/bash
echo Write your Diary:
workpath=`pwd`
Day=`date +%F`
Fmonth=`date +%Y-%m`

Isfirst=0
if [[ -e $Fmonth ]]; then
    Isfirst=`grep "$Day" $Fmonth | wc -l`
fi

if [[ "$Isfirst" -eq "0" ]]; then
    echo -e "\n $Day `date +%A`" > $Fmonth   
    echo ---------------------------------------- >> $Fmonth
fi  

cd ~/local/diary && cat >> $Fmonth ; echo ---------------------------------------- >> $Fmonth
cd $workpath
